<div class="media-gallery-fictice">
  <div style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff" class="swiper gallery-main">
    <div class="swiper-wrapper">
      {% for image in variant_images %}
        <div class="swiper-slide">
          <img
            src="{{ image | img_url: '1000x' }}"
            alt="{{ image.alt | escape }}"
            loading="lazy"
            data-image-id="{{ image.id }}"
          >
        </div>
      {% endfor %}
    </div>
    <div class="navegacao">
      <div class="arrows">
        <div class="anterior5">
          <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#e6e6e6">
            <path d="m142-480 294 294q15 15 14.5 35T435-116q-15 15-35 15t-35-15L57-423q-12-12-18-27t-6-30q0-15 6-30t18-27l308-308q15-15 35.5-14.5T436-844q15 15 15 35t-15 35L142-480Z"/>
          </svg>
        </div>
        <div class="proximo5">
          <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#e6e6e6">
            <path d="M579-480 285-774q-15-15-14.5-35.5T286-845q15-15 35.5-15t35.5 15l307 308q12 12 18 27t6 30q0 15-6 30t-18 27L356-115q-15 15-35 14.5T286-116q-15-15-15-35.5t15-35.5l293-293Z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <div thumbsSlider="" class="swiper gallery-thumbs">
    <div class="swiper-wrapper">
      {% for image in variant_images %}
        <div class="swiper-slide">
          <img
            src="{{ image | img_url: '150x' }}"
            alt="{{ image.alt | escape }}"
            loading="lazy"
          >
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var swiper = new Swiper('.gallery-thumbs', {
      spaceBetween: 10,
      slidesPerView: 4,
      freeMode: true,
      watchSlidesProgress: true,
    });

    var swiper2 = new Swiper('.gallery-main', {
      spaceBetween: 10,
      navigation: {
        nextEl: '.proximo5',
        prevEl: '.anterior5',
      },
      thumbs: {
        swiper: swiper,
      },
    });

    const zoomImages = document.querySelectorAll('.gallery-main img');
    zoomImages.forEach((img) => {
      img.addEventListener('click', function () {
        if (this.classList.contains('zoomed')) {
          this.style.transform = 'scale(1)';
          this.classList.remove('zoomed');
        } else {
          this.style.transform = 'scale(1.5)';
          this.classList.add('zoomed');
        }
      });
    });
  });
</script>
