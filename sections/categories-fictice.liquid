<div class="my-container categories">
    <div class="swiper mySwiper2">
        <div class="swiper-wrapper">
            {% for collection in collections %}
                <div class="swiper-slide categoria-slide">
                    <a class="card-categoria" href="{{ collection.url }}" target="_blank">
                        <img class="imagem-categoria" src="{{ collection.image.src | img_url: '500x500' }}" alt="{{ collection.title }}">
                        <span class="nome-categoria">{{ collection.title }}</span>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="navegacao">
        <div class="swiper-pagination2 paginacao"></div>
        <div class="arrows">
            <div class="anterior"><svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#fff"><path d="m142-480 294 294q15 15 14.5 35T435-116q-15 15-35 15t-35-15L57-423q-12-12-18-27t-6-30q0-15 6-30t18-27l308-308q15-15 35.5-14.5T436-844q15 15 15 35t-15 35L142-480Z"/></svg></div>
            <div class="proximo"><svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#fff"><path d="M579-480 285-774q-15-15-14.5-35.5T286-845q15-15 35.5-15t35.5 15l307 308q12 12 18 27t6 30q0 15-6 30t-18 27L356-115q-15 15-35 14.5T286-116q-15-15-15-35.5t15-35.5l293-293Z"/></svg></div>
        </div>
        
    </div>
    
    
</div>

