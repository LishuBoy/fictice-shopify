<div class="my-container hero">
    <div class="swiper mySwiper">
        <div class="swiper-wrapper">
            {% for block in section.blocks %}
                <div class="swiper-slide">
                    <a href="{{ block.settings.link }}" target="_blank">
                        <img 
                            src="{{ block.settings.image_desktop | img_url: 'master' }}" 
                            alt="Slide {{ forloop.index }}" 
                            class="d-none d-md-block"
                        >
                        <img 
                            src="{{ block.settings.image_mobile | img_url: 'master' }}" 
                            alt="Slide {{ forloop.index }}" 
                            class="d-block d-md-none"
                        >
                    </a>
                </div>
            {% endfor %}
        </div>
        
    </div>
    <div class="swiper-pagination"></div>
</div>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_desktop",
          "label": "Imagem para Desktop"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Imagem para Mobile"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link do Slide"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
